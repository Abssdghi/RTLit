{
  "manifest_version": 3,
  "name": "RTL it",
  "version": "0.1",
  "description": "make the page RTL with one click!",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "script.js"
  },
  "author": "Abbas Sadeghi",
  "homepage_url": "https://github.com/Abssdghi/RTLit",
  "icons": {
    "48": "icons/mainicon48.png",
    "128": "icons/mainicon128.png"
  }
}